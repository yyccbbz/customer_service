<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 用来指定外部的属性元素 -->
    <properties resource="datasource.properties"/>

    <!-- context 至少需要一个，指定生成一组对象的环境，例如指定要连接的数据库，要生成对象的类型和要处理的数据库中的表等 -->
    <!--<context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">-->
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- 指定分隔符 反向引号 -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 插件用于扩展或修改通过MyBatis Generator (MBG)代码生成器生成的代码 -->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="org.blazer.bigclient.util.MyMapper"/>
        </plugin>

        <!-- 阻止生成注释信息 -->
        <!--<commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>-->

        <!-- 用于指定数据库连接信息 -->
        <jdbcConnection driverClass="${driverClass}" connectionURL="${url}" userId="${username}" password="${password}">
        </jdbcConnection>

        <!-- 控制生成的实体类 -->
        <javaModelGenerator targetPackage="org.blazer.bigclient.generator" targetProject="src/test/java"/>

        <!-- 控制生成XML的SQL映射文件和实体类 -->
        <sqlMapGenerator targetPackage="org.blazer.bigclient.generator" targetProject="src/test/java"/>

        <!-- 控制生成Mapper接口 -->
        <javaClientGenerator targetPackage="org.blazer.bigclient.generator" targetProject="src/test/java"
                             type="XMLMAPPER"/>

        <!-- 配置要通过内省的表。只有配置的才会生成实体类和其他文件 -->
        <table tableName="%">
            <!-- 用来指定自动生成主键的属性（identity字段或者sequences序列） -->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>